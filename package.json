{
  "name": "@kurocado-studio/website",
  "version": "0.0.0-semantically-released",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "remix vite:build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "clean": "rm -rf node_modules pnpm-lock.yaml",
    "dev": "remix vite:dev",
    "eslint-check": "eslint --max-warnings=0 . --debug",
    "eslint-fix": "eslint --max-warnings=0 . --fix",
    "lint": "eslint --max-warnings=0 .",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "remix-serve ./build/server/index.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit true"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.{ts,tsx}": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@kurocado-studio/qa": "2.0.0-alpha.2",
    "@kurocado-studio/ui": "1.3.2",
    "@motionone/utils": "10.18.0",
    "@remix-run/node": "2.16.6",
    "@remix-run/react": "2.16.6",
    "@testing-library/jest-dom": "^6.6.3",
    "ahooks": "^3.8.4",
    "clsx": "2.1.1",
    "framer-motion": "11.13.5",
    "isbot": "5.1.27",
    "lodash-es": "4.17.21",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "3.3.0",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "0.5.9",
    "@kurocado-studio/styleguide": "1.10.3",
    "@remix-run/dev": "2.8.1",
    "@remix-run/serve": "2.16.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.1",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "10.4.21",
    "commitlint": "19.8.1",
    "eslint": "9.26.0",
    "eslint-define-config": "2.1.0",
    "husky": "^9.1.7",
    "lint-staged": "15.5.2",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-packagejson": "^2.5.12",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "23.1.1",
    "typescript": "5.8.3",
    "vite": "5.4.12",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=20"
  }
}
