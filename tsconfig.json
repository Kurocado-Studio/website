{
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "tailwind.config.ts",
    "setup.remix.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "extends": "@kurocado-studio/styleguide/tsconfig/remix",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES5",
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": "./app",
    "paths": {
      "~/*": ["./*"]
    },
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
